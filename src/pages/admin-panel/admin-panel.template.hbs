<ui-loader loading="{{isLoading}}" class-name="bg-white/50 z-10"></ui-loader>
<div
  class="grid grid-cols-12 bg-emerald-300 h-screen w-screen font-serif animate-fade"
>
  <div class="col-span-2 bg-emerald-300 pt-8 px-8 block">
    <div class="flex flex-col items-center px-2 mt-3">
      <a
        href="mailto:{{user.email}}"
        class="text-2xl text-indigo-800"
      >{{user.email}}</a>
      <button
        class="logout-btn border-b border-zinc-800 mt-4 text-lg flex items-center rounded p-2 w-full justify-center gap-2 hover:text-indigo-800"
      >
        <i class="icon-log-out logout-btn"></i>
        Logout
      </button>
    </div>
  </div>
  <div class="col-span-10 bg-emerald-100 pt-20 px-20"></div>
</div>