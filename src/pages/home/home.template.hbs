<main class="flex bg-emerald-300 h-screen w-screen font-serif animate-fade">

  <div
    class="flex flex-col bg-emerald-100 w-[36rem] h-[36rem] mx-auto mt-40 rounded-lg p-7 shadow-2xl justify-between"
  >
    <div class="text-center">

      <h1 class="text-indigo-600 text-8xl font-bold pb-10">
        English Irregular Verbs
      </h1>

      <p class="text-indigo-600 text-3xl">
        Start Learning Now
      </p>

    </div>

    <nav class="flex h-max justify-around">

      {{#each links}}
        <router-link
          href="{{this.href}}"
          class="block text-indigo-600 hover:text-indigo-800 text-xl"
          label="{{this.label}}"
        ></router-link>
      {{/each}}

    </nav>

  </div>

</main>